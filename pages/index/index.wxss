/* 鱼塘概览 */

page {
  font-size: 26rpx;
}

/* 点击动画 */
.button-hover {
  transform: translate(2rpx,2rpx);
}

.index-container .text-title {
  margin-bottom: 3rpx;
  font-size: 30rpx;
}

.index-container .fishpond-pic image {
  width: 236rpx;
  height: 166rpx;
  background-color: azure;
}

.index-container .device-list .device-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  background-color: #fff;
}

.index-container .device-list .device-item .fishpond-info {
  margin-left: 30rpx;
}