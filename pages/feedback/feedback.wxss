/* pages/feedback/feedback.wxss */
.animation-rotate {
  /* transition: transform .5s; */
  animation: rotate .5s forwards;
}

@keyframes rotate {
  0% {
    transform: rotate(0);
  }
  100% {
    transform: rotate(90deg);
  }
}

.animation-rotate-reverse {
  /* transition: transform .5s; */
  animation: rotate-reverse .5s forwards;
}

@keyframes rotate-reverse {
  0% {
    transform: rotate(90deg);
  }
  100% {
    transform: rotate(0);
  }
}

.feedback-wrapper .button-confirm {
  width: 90%;
  margin: 30rpx auto;
}

.feedback-wrapper .type-picker {
  display: flex;
  flex-direction: row;
  border: 1px solid gainsboro;
  height: 76rpx;
  padding: 0 30rpx;
  line-height: 76rpx;
}

.feedback-wrapper .type-picker picker {
  width: 100%;
}

.feedback-wrapper .type-picker .title {
  flex-grow:1;
}

.feedback-wrapper .type-picker .title > text {
  display: inline-block;
  width: 95%;
}

.feedback-wrapper .type-picker .title > view {
  display: inline-block;
}

.feedback-wrapper .input-box {
  height: 20vh;
  margin: 30rpx;
  position: relative;
  border: 1px solid gainsboro;
}


.feedback-wrapper .input-box textarea {
  width: 100%;
  height: 80%;
}

.feedback-wrapper .input-box .counter {
  color: #888;
  margin: 20rpx;
  position: absolute;
  right: 30rpx;
  top: 14vh;
}

.feedback-wrapper .contact-way {
  height: 76rpx;
  line-height: 76rpx;
  border: 1px solid gainsboro;
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.feedback-wrapper .contact-way input {
  width: 100%;
}
