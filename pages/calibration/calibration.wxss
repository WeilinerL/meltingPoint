/* pages/calibration/calibration.wxss */
.alibration-wrapper {
  color: gray;
}

.button-hover {
  background-color: #f6f6f6;
  transform: translate(2rpx,2rpx);
}

.calibration-wrapper .calibration-type {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.calibration-wrapper .calibration-type image{
  width: 96rpx;
  height: 96rpx;
  background-color: #f1f1f1;
  border-radius: 100%;
}

.calibration-wrapper .calibration-item .text-xxl {
  font-size: 76rpx;
}

.calibration-wrapper .calibration-item .cu-btn {
  width: 266rpx;
  color: gray;
  /* margin-right: 36rpx; */
}

.calibration-wrapper .calibration-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 30rpx;
  /* height: 126rpx; */
  /* line-height: 126rpx;  */
  border-top: 1px solid #e1e1e1;
  border-bottom: 1px solid #e1e1e1;
}

.calibration-wrapper .calibration-item .picker {
  height: 96rpx;
  line-height: 96rpx;
  padding: 0 12rpx;
  width: 216rpx;
  border-radius: 12rpx;
  background-color: #eee;
  position: relative;
  border: 1px solid #bbb;
  box-shadow: 0rpx 0rpx 100rpx 0rpx rgba(0, 0, 0, 0.07);
  background-image: linear-gradient(90deg, #ddd 0%, #eee 10%, #eee 90%,#ddd 100%);
}

.calibration-wrapper .calibration-item .aim-number {
  display: flex;
  flex-direction: column;
}

.calibration-wrapper .calibration-item .picker .icon {
  position: absolute;
  right: 12rpx;
}

.calibration-wrapper .calibration-item .title {
  display: inline-block;
  width: 506rpx;
}

.calibration-wrapper .calibration-item .choosed {
  background-color: var(--Blue);
  color: #fff;
}

.calibration-wrapper .start-calibration {
  width: 100%;
  height: 166rpx;
  line-height: 166rpx;
}